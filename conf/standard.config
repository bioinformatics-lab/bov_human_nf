params {

    outdir = "${baseDir}/results"

    gatk38_jar = "${baseDir}/resources/GenomeAnalysisTK.jar"

    reads = "${baseDir}/data/full_data/*_{R1,R2}*fastq.gz"

    mtbseq_library_name = "lib"

    mtbseq_project_name = "BovisHuman"

}


process {
    withName:
    'FASTQC' {
        container = 'quay.io/biocontainers/fastqc:0.11.9--0'
        cpus = 2
        memory = "4 GB"
    }

    withName:
    'MULTIQC' {
        container = 'quay.io/biocontainers/multiqc:1.9--pyh9f0ad1d_0'
        cpus = 3
        memory = "4 GB"
    }

    withName:
    'TRIMMOMATIC' {
        container = 'quay.io/biocontainers/trimmomatic:0.35--6'
        cpus = 3
        memory = "4 GB"
    }


    withName:
    'SPOTYPING' {
        cpus = 3
        memory = '4 GB'
        container = 'quay.io/bioinformatics_playground/spotyping:0.0.1'
        // container = 'abhi18av/spotyping'

    }


}
